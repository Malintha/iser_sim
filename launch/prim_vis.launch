<?xml version="1.0"?>
<launch>
    <arg name="nDrones" default="5" />
    <arg name="obstacleConfig" default="obstacles.yaml"/>

    <arg name="data_dir" default="$(find prim_vis)/launch/data/"/>

    <env name="ROSCONSOLE_CONFIG_FILE"
       value="$(find prim_vis)/launch/custom_rosconsole.conf"/>
  
    <node name="prim_vis" pkg="prim_vis" type="prim_vis" output="screen">
        <param name="trajDir" value="$(arg traj_dir)"/>
        <param name="nDrones" value="$(arg nDrones)"/>
        <param name="obstacleFileName" value="$(arg obstacleConfig)"/>
    </node>

      <node name="rviz"
        pkg="rviz"
        type="rviz"
        output="screen"
        args="-d $(find prim_vis)/launch/simulation.rviz"
        />
  />

</launch>
